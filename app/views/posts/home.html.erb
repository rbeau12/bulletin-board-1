    <div class="container">


      <div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h1 class="h6">All boards</h1>

        <!-- Button trigger modal -->
        <button type="button" class="ms-auto btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#newBoardModal">
          Add a new board
        </button>
      </div>
      <%Board.all.each do |the_item|%>
      <div class="list-group list-group-flush">
          <a href="/boards/<%=the_item.id%>" class="d-flex list-group-item list-group-item-action">
            <%=the_item.name%>

            <div class="ms-auto">
              <i class="fa-solid fa-chevron-right"></i>
            </div>
          </a>
      </div>
      <%end%>

    </div>
  </div>
</div>

<!-- Modal -->
